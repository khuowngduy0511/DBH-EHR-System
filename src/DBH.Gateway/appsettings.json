{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" }
        ]
      },
      "auth-swagger": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/swagger/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" }
        ]
      },
      "ehr-route": {
        "ClusterId": "ehr-cluster",
        "Match": {
          "Path": "/api/ehr/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      },
      "ehr-root": {
        "ClusterId": "ehr-cluster",
        "Match": {
          "Path": "/api/ehr"
        },
        "Transforms": [
          { "PathSet": "/ehr" }
        ]
      },
      "ehr-swagger": {
        "ClusterId": "ehr-cluster",
        "Match": {
          "Path": "/services/ehr/swagger/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/services/ehr" }
        ]
      },
      "ehr-swagger-root": {
        "ClusterId": "ehr-cluster",
        "Match": {
          "Path": "/services/ehr/swagger"
        },
        "Transforms": [
          { "PathSet": "/swagger" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-service": {
            "Address": "http://auth_service:8080"
          }
        }
      },
      "ehr-cluster": {
        "Destinations": {
          "ehr-service": {
            "Address": "http://ehr_service:5050"
          }
        }
      }
    }
  }
}
