{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "Jwt": {
    "SecretKey": "your-super-secret-key-for-jwt-token-generation-min-32-chars",
    "Issuer": "dbh-auth-service",
    "Audience": "dbh-services"
  },
  
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 200
      },
      {
        "Endpoint": "post:/api/v1/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "post:/api/v1/auth/register",
        "Period": "1h",
        "Limit": 10
      }
    ]
  },
  
  "ReverseProxy": {
    "Routes": {
      "auth-api": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/v1/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/auth/{**catch-all}" }
        ]
      },
      "auth-did": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/v1/did/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/did/{**catch-all}" }
        ]
      },
      "auth-swagger": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/services/auth/swagger/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/services/auth" }
        ]
      },
      
      "org-api": {
        "ClusterId": "organization-cluster",
        "Match": {
          "Path": "/api/v1/organizations/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/organizations/{**catch-all}" }
        ]
      },
      "org-departments": {
        "ClusterId": "organization-cluster",
        "Match": {
          "Path": "/api/v1/departments/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/departments/{**catch-all}" }
        ]
      },
      "org-memberships": {
        "ClusterId": "organization-cluster",
        "Match": {
          "Path": "/api/v1/memberships/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/memberships/{**catch-all}" }
        ]
      },
      "org-swagger": {
        "ClusterId": "organization-cluster",
        "Match": {
          "Path": "/services/organization/swagger/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/services/organization" }
        ]
      },
      
      "ehr-api": {
        "ClusterId": "ehr-cluster",
        "Match": {
          "Path": "/api/v1/ehr/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/ehr/{**catch-all}" }
        ]
      },
      "ehr-fhir": {
        "ClusterId": "ehr-cluster",
        "Match": {
          "Path": "/api/v1/fhir/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/fhir/{**catch-all}" }
        ]
      },
      "ehr-swagger": {
        "ClusterId": "ehr-cluster",
        "Match": {
          "Path": "/services/ehr/swagger/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/services/ehr" }
        ]
      },
      
      "consent-api": {
        "ClusterId": "consent-cluster",
        "Match": {
          "Path": "/api/v1/consents/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/consents/{**catch-all}" }
        ]
      },
      "consent-access-requests": {
        "ClusterId": "consent-cluster",
