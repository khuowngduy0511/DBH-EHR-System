        },
        "Transforms": [
          { "PathRemovePrefix": "/services/consent" }
        ]
      },
      
      "audit-api": {
        "ClusterId": "audit-cluster",
        "Match": {
          "Path": "/api/v1/audit/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/audit/{**catch-all}" }
