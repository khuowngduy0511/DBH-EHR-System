        "Match": {
          "Path": "/api/v1/notifications/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/notifications/{**catch-all}" }
        ]
      },
      "notification-swagger": {
        "ClusterId": "notification-cluster",
        "Match": {
          "Path": "/services/notification/swagger/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/services/notification" }
        ]
      }
    },
    
    "Clusters": {
      "auth-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "auth-service-1": {
            "Address": "http://auth_service:5001"
          }
        }
      },
      
      "organization-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
